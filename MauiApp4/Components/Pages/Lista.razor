@page "/lista"

<h3>Lista de Cadastros</h3>

<table class="table">
	<thead>
		<tr>
			<th>Nome</th>
			<th>CPF</th>
			<th>Telefone</th>
			<th>Opções</th>
		</tr>
	</thead>
	<tbody>
		<tr>
			@if (lista != null)
			{
				@foreach (var cliente in lista)
				{
					<td>@cliente.nome</td>
					<td>@cliente.cpf</td>
					<td>@cliente.telefone</td>
				}
			}
						
		</tr>
	</tbody>
</table>

@code {
	List<Cliente> lista = new();

	protected override async Task OnInitializedAsync()
	{
		lista = await new ClienteDAO().ListarClientes();
	}

}
